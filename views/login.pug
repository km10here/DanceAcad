style
      include ../static/styleLogin.css
block scripts   
    script(src="/static/index.js") 
    script(src="/static/login.js") 
title Login Form

div.container
  p.login-text Login with social media
  div.login-social
    a.facebook(href="#")
      i.fa.fa-facebook
      |  Facebook
    a.twitter(href="#")
      i.fa.fa-twitter
      |  Twitter
    a.google-plus(href="#")
      i.fa.fa-google-plus
      |  Google Plus
    a.linkedin(href="#")
      i.fa.fa-linkedin
      |  Linkedin
  form.login-email
    p.login-text Login with email
    .input-group
      input(type="email", placeholder="Email", required)
    .input-group
      input(type="password", placeholder="Password", required)
    .input-group
      button.btn Login